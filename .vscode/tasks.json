{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Java",
            "type": "shell",
            "command": "javac",
            "args": [
                "-cp",
                "lib/*",
                "-d",
                "out",
                // "src.java"
            ],
            "group": "build",
            "problemMatcher": ["$javac"]
        },
        {
            "label": "Run Java",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp",
                "out:lib/*",
                "amar.oreo.main"
            ],
            "group": "test",
            "dependsOn": "Compile Java"
        }
    ]
}
